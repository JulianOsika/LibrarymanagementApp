@page
@model LibraryManagement.Presentation.RazorPages.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Books list";
}

<h2>Books list</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Description</td>
                <td>@book.AuthorName @book.AuthorSurname</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@book.Id" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                    <a asp-page="/Admin/EditBook" asp-route-id="@book.Id">
                        <button type="button">Edit</button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/Admin/AddBook">
    <button>Add book</button>
</a>


