@page
@model StatsModel
@{
    ViewData["Title"] = "Library stats (SOAP)";
}

<h2>Library statistics</h2>

<ul>
    <li><strong>Number of books:</strong> @Model.Stats.BooksCount</li>
    <li><strong>Number of readers:</strong> @Model.Stats.ReadersCount</li>
    <li><strong>Active loans:</strong> @Model.Stats.ActiveLoansCount</li>
</ul>